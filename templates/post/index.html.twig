{% extends 'base.html.twig' %}

{% block title %}
  Hello PostController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>

  <div class="example-wrapper">
    <div class="row">
      {% for post in posts %}
      <a class="block" href="post/{{ post.id }}">
        <div>
          <div class="post">
            <p class="text-center"><b>{{ post.title }}</b></p>
            <p class="description">{{ post.description }}</p>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
    <div class="button">
      <a href="{{ path("post_create") }}" class="btn btn-success">Создать новость</a>
    </div>
  </div>
  <style>

.row{
    display: flex;
    flex-wrap:wrap;
    margin: 10px -10px;
}
.block{
  border: 1px solid #a6a6a6;
  border-radius: 5px;
  width: 30%;
  margin: 10px 10px;

}
.block:hover{
  cursor:pointer;
  background-color:#f2f2f2;
}
.post{
  padding:5px;
  min-height:100%
}
.post p{
  color:black;
}
a{
  text-decoration: none;
}
.description{
  font-size:13px;
  color:#3d3d3d!important;
}
</style>
{% endblock %}
